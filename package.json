{
  "name": "setupflow",
  "version": "0.1.0",
  "description": "Cross-platform desktop application for automated software installation and configuration",
  "main": "src/main/main.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"npm run react-start\" \"wait-on http://localhost:3000 && npm run electron\"",
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "electron": "electron .",
    "electron-dev": "ELECTRON_IS_DEV=true electron .",
    "build": "npm run react-build && electron-builder",
    "dist": "npm run react-build && electron-builder --publish=never",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "keywords": [
    "electron",
    "react",
    "installer",
    "automation",
    "desktop-app"
  ],
  "author": "SetupFlow Team",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "concurrently": "^7.6.0",
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@mui/material": "^5.11.0",
    "@mui/icons-material": "^5.11.0",
    "uuid": "^9.0.0",
    "fs-extra": "^11.1.0",
    "path": "^0.12.7"
  },
  "build": {
    "appId": "com.setupflow.app",
    "productName": "SetupFlow",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "src/main/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
} 